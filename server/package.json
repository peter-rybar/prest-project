{
  "scripts": {
    "build": "tsc",
    "build:watch": "npm run build -- -w",
    "server:watch:ts": "nodemon --watch ./src --watch ../client/build/main --watch ../client/dist --exec ts-node ./src/app.ts",
    "server:watch": "nodemon --watch ./build --watch ../client/build/main --watch ../client/dist ./build/app.js",
    "server:cluster": "NODE_ENV=production node ./build/cluster.js",
    "server:pm2": "NODE_ENV=production pm2 start ./build/app.js -i 0 --name project",
    "pm2": "NODE_ENV=production pm2",
    "clean": "rimraf build; rimraf dist",
    "clean:all": "npm run clean; rimraf node_modules"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.3",
    "@types/express": "^4.0.35",
    "nodemon": "^1.11.0",
    "typescript": "2.3.x"
  },
  "dependencies": {
    "body-parser": "^1.17.1",
    "express": "^4.15.2",
    "express-basic-auth": "^1.0.1",
    "pm2": "^2.5.0",
    "tingodb": "^0.5.1",
    "ts-node": "^3.2.0"
  }
}
